{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@design/*": ["./src/design/*"],
      "@components/*": ["./src/components/*"],
      "@services/*": ["./src/services/*"],
      "@routes/*": ["./src/routes/*"],
      "@utils/*": ["./src/utils/*"],
      "@validations/*": ["./src/validations/*"],
      "@assets/*": ["./src/assets/*"],
      "@styles/*": ["./src/styles/*"],
      "@content/*": ["./src/content/*"],
      "@context/*": ["./src/context/*"],
      "@config/*": ["./src/config/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@ptypes/*": ["./src/types/*"],
      "@api/*": ["./src/api/*"],
      "@forms/*": ["./src/shared/forms/*"],
      "@enum/*": ["./src/enum/*"],
      "@events/*": ["./src/events/*"]
    },
    "types": ["vite/client", "rollup"]
  },

  "include": ["src", "types.d.ts", "vite-env.d.ts"],
  "exclude": ["node_modules/@types/glob", "node_modules/@types/minimatch"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
